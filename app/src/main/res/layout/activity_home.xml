<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F8E9"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp">

        <!-- Karşılama Mesajı -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hoş Geldiniz!"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#388E3C"
            android:layout_marginBottom="16dp" />

        <!-- Kullanıcıya Soru -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bugün ne yapmak istersiniz?"
            android:textSize="18sp"
            android:textColor="#4CAF50"
            android:layout_marginBottom="24dp" />

        <!-- Buton 1 -->
        <Button
            android:id="@+id/btn_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#66BB6A"
            android:onClick="goToSharedPreferencesActivity"
            android:text="Profilimi Görüntüle"
            android:textColor="#FFFFFF" />

        <!-- Buton 2 -->
        <Button
            android:id="@+id/btn_cloud"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#66BB6A"
            android:onClick="goToCloudServiceAiActivity"
            android:text="Duygu Analizi"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btn_movie_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#66BB6A"
            android:onClick="goToLocalDatabaseActivity"
            android:text="Film Listem"
            android:textColor="#FFFFFF" />
        <Button
            android:id="@+id/btn_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ayarlar"
            android:backgroundTint="#66BB6A"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="16dp" />


        <!-- Buton 3 -->
        <Button
            android:id="@+id/btn_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#F44336"
            android:onClick="goBack"
            android:text="Çıkış Yap"
            android:textColor="#FFFFFF" />

    </LinearLayout>
</ScrollView>
